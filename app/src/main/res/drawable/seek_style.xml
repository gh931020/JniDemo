<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景效果 -->

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <!-- angle 是角度 -->
            <gradient
                android:angle="270"
                android:centerColor="#98A2B3"
                android:centerY="0.75"
                android:endColor="#98A2B3"
                android:startColor="#98A2B3" />
        </shape>
    </item>

    <!-- 第一进度条 -->

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#32A9F1"
                    android:centerY="0.75"
                    android:endColor="#32A9F1"
                    android:startColor="#32A9F1" />
            </shape>
        </clip>
    </item>


</layer-list>